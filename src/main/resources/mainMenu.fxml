<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER"
      prefHeight="700"
      prefWidth="1000"
      spacing="30"
      styleClass="root"
      xmlns="http://javafx.com/javafx/11"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.comp2042.ui.MainMenuController">

    <children>
        <Label styleClass="mainTitle" text="TETRIS" />

        <Button fx:id="startButton" onAction="#handleStartButton" prefWidth="200" prefHeight="50" text="START GAME" />
        <Button fx:id="exitButton" onAction="#handleExitButton" prefWidth="200" prefHeight="50" text="EXIT" />
    </children>

    <stylesheets>
        <URL value="@window_style.css" />
    </stylesheets>

</VBox>