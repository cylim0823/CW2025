<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane fx:id="rootPane" prefHeight="700.0" prefWidth="1000.0" styleClass="root" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.comp2042.ui.GuiController">

    <VBox fx:id="gameScreen" alignment="CENTER" prefHeight="700.0" prefWidth="1000.0" spacing="10" style="-fx-padding: 20;">

        <HBox alignment="CENTER" spacing="30">

            <BorderPane fx:id="gameBoard"
                        prefHeight="519.0" prefWidth="259.0"
                        maxHeight="519.0" maxWidth="259.0"
                        minHeight="519.0" minWidth="259.0"
                        style="-fx-padding:0;"
                        styleClass="gameBoard">

                <center>
                    <StackPane alignment="TOP_LEFT"
                               prefHeight="519.0" prefWidth="259.0"
                               maxHeight="519.0" maxWidth="259.0"
                               minHeight="519.0" minWidth="259.0">

                        <children>
                            <GridPane fx:id="gamePanel"
                                      hgap="1.0" vgap="1.0"
                                      prefHeight="519.0" prefWidth="259.0"
                                      maxHeight="519.0" maxWidth="259.0"
                                      minHeight="519.0" minWidth="259.0" />

                            <GridPane fx:id="brickPanel"
                                      hgap="1.0" vgap="1.0"
                                      prefHeight="519.0" prefWidth="259.0"
                                      maxHeight="519.0" maxWidth="259.0"
                                      minHeight="519.0" minWidth="259.0" />
                        </children>

                    </StackPane>
                </center>
            </BorderPane>


            <VBox alignment="CENTER" prefWidth="200.0" spacing="15">

                <VBox alignment="CENTER" spacing="5">
                    <children>
                        <Label styleClass="scoreClass" text="NEXT" />
                        <BorderPane prefHeight="129.0" prefWidth="129.0"
                                    maxHeight="129.0" maxWidth="129.0"
                                    minHeight="129.0" minWidth="129.0"
                                    styleClass="gameBoard">
                            <center>
                                <StackPane alignment="CENTER">
                                    <children>
                                        <GridPane fx:id="nextBrickPanel" hgap="1" vgap="1" />
                                    </children>
                                </StackPane>
                            </center>
                        </BorderPane>
                    </children>
                </VBox>

                <VBox alignment="CENTER" spacing="5">
                    <children>
                        <Label styleClass="scoreClass" text="HOLD" />
                        <BorderPane prefHeight="129.0" prefWidth="129.0"
                                    maxHeight="129.0" maxWidth="129.0"
                                    minHeight="129.0" minWidth="129.0"
                                    styleClass="gameBoard">
                            <center>
                                <StackPane alignment="CENTER">
                                    <children>
                                        <GridPane fx:id="holdBrickPanel" hgap="1" vgap="1" />
                                    </children>
                                </StackPane>
                            </center>
                        </BorderPane>
                    </children>
                </VBox>

                <VBox alignment="CENTER_LEFT" prefWidth="200.0" spacing="10">
                    <children>
                        <Button fx:id="pauseButton" onAction="#handlePauseButton" prefWidth="120.0" text="PAUSE" />
                        <Button fx:id="newGameBtn" onAction="#handleNewGameButton" prefWidth="120.0" text="RESTART" />
                        <Button fx:id="exitButton" onAction="#handleExitButton" prefWidth="120.0" text="EXIT" />
                        <Label fx:id="scoreLabel" prefWidth="200.0" styleClass="scoreClass" text="Score: 0" />
                        <Label fx:id="levelLabel" prefWidth="200.0" styleClass="scoreClass" text="Level: 1" />
                    </children>
                    <padding>
                        <Insets top="20.0" />
                    </padding>
                </VBox>
            </VBox>
        </HBox>
    </VBox>

    <Label fx:id="countdownLabel" styleClass="gameOverStyle" text="3" visible="false" StackPane.alignment="CENTER" />

    <VBox fx:id="pausePane" alignment="CENTER" spacing="20" styleClass="overlay" visible="false">
        <children>
            <Label styleClass="gameOverStyle" text="PAUSED" />
            <Button fx:id="resumeBtn" onAction="#handlePauseButton" text="RESUME" />
            <Button fx:id="mainMenuBtn" onAction="#handleMainMenuButton" text="MAIN MENU" />
        </children>
    </VBox>

    <VBox fx:id="gameOverPane" alignment="CENTER" spacing="20" styleClass="overlay" visible="false">
        <children>
            <Label styleClass="gameOverStyle" text="GAME OVER" />
            <Button fx:id="playAgainBtn" onAction="#handleNewGameButton" text="PLAY AGAIN" />
            <Button fx:id="mainMenuBtnGameOver" onAction="#handleMainMenuButton" text="MAIN MENU" />
        </children>
    </VBox>

    <stylesheets>
        <URL value="@window_style.css" />
    </stylesheets>

</StackPane>
