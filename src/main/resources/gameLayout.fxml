<?xml version="1.0" encoding="UTF-8"?>

<?import com.comp2042.ui.GameOverPanel?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.Group?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<?import javafx.scene.text.Font?>

<Pane fx:controller="com.comp2042.ui.GuiController"
      xmlns:fx="http://javafx.com/fxml">
    <GridPane fx:id="brickPanel" vgap="1" hgap="1"/>
    <BorderPane styleClass="gameBoard" fx:id="gameBoard">
        <center>
            <GridPane fx:id="gamePanel" hgap="1" vgap="1" layoutY="30" layoutX="40"/>
        </center>
    </BorderPane>

    <Group fx:id="groupNotification" layoutX="14" layoutY="180">
        <VBox alignment="CENTER">
            <GameOverPanel fx:id="gameOverPanel"/>
        </VBox>
    </Group>

    <VBox alignment="CENTER" layoutX="255.0" layoutY="60.0" spacing="5">
        <children>
            <Label text="NEXT" textFill="white">
                <font>
                    <Font name="System Bold" size="18.0" />
                </font>
            </Label>
            <GridPane fx:id="nextBrickPanel" hgap="1" vgap="1" styleClass="gameBoard" style="-fx-padding: 5">
            </GridPane>
        </children>
    </VBox>
    <VBox alignment="CENTER" layoutX="255.0" layoutY="220.0" spacing="5">
        <children>
            <Label text="HOLD" textFill="white">
                <font>
                    <Font name="System Bold" size="18.0" />
                </font>
            </Label>
            <GridPane fx:id="holdBrickPanel" hgap="1" vgap="1" styleClass="gameBoard" style="-fx-padding: 5">
            </GridPane>
        </children>
    </VBox>
    <VBox alignment="CENTER_LEFT" layoutX="255.0" layoutY="400.0" spacing="10">
        <children>
            <Label fx:id="scoreLabel" text="Score: 0" textFill="white">
                <font>
                    <Font name="System Bold" size="18.0" />
                </font>
            </Label>
            <Label fx:id="levelLabel" text="Level: 1" textFill="white">
                <font>
                    <Font name="System Bold" size="18.0" />
                </font>
            </Label>
        </children>
    </VBox>
    <stylesheets>
        <URL value="@window_style.css"/>
    </stylesheets>
</Pane>